doctype html
// ROOM
html(lang='ja')
	head
		title イチモニット
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		// Style
		link(rel='stylesheet', type='text/css', href='../css/style.css')
		//
			<script type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js'></script>
			<script type='text/javascript' src='https://skyway.io/dist/v2/0.3/peer.js'></script>
			<script type='text/javascript' src='../js/ecl.js'></script>
			<script type='text/javascript' src='../js/GetQuestions1.js'></script>
			<script type='text/javascript' src='../js/kick.js'></script>
			<script type='text/javascript' src='../js/speech15.js'></script>
			<script type='text/javascript' src='../js/call.js'></script>
			<script type='text/javascript' src='../js/init0.js'></script>

	body
		header
			img(src='../img/ichimonitto-logo.png')
		main
			section.quiz-view-box
				.quiz-view
					span.top-right-text top-right-text.
					span.center-text center text.
				// <script type='text/javascript' src='../js/viewquestion0.js'></script>
			section.speech-buttons
				input(type='button', value='答える', onclick='recognition.start();')
				input(type='button', value='終了', onclick='recognition.stop();')
				.state 停止中
				.question
			section.user-view
				each num in [0, 1, 2, 3, 4, 5]
					.user-area
						span.user-answer ...
						.user-video-box(class='box' + num)
							video.user-video(muted='true', autoplay='')
		footer
			p Copyright © MLOA All Rights Reserved.

		script(src='../js/room.js')